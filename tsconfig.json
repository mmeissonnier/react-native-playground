{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6"],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": ".",
    "target": "esnext"
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "storybook"]
}
